[Unit]
Description=Drawpile dedicated server
Documentation=man:@srvname@(1)
After=network.target

[Service]
Type=notify
NotifyAccess=main
ExecStart=@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_BINDIR@/@srvname@@CMAKE_EXECUTABLE_SUFFIX@
Restart=always
WatchdogSec=60s
User=nobody

[Install]
WantedBy=multi-user.target
